{
    "name": "{{ .name }}",
    "rules": [
      {
        "type": "SERVICE",
        "enabled": true,
        "propagationTypes": [
          "SERVICE_TO_HOST_LIKE",
          "SERVICE_TO_PROCESS_GROUP_LIKE"
        ],
        "conditions": [
          {
            "key": {
              "attribute": "SERVICE_TAGS"
            },
            "comparisonInfo": {
              "type": "TAG",
              "operator": "EQUALS",
              "value": {
                "context": "KUBERNETES",
                "key": "app.kubernetes.io/name",
                "value": "{{ .service }}"
              },
              "negate": false
            }
          }
        ]
      }
    ],
    "dimensionalRules": []
  }